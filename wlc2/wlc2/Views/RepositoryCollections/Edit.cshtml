@model wlc2.Models.RepositoryCollection

@{
    ViewData["Title"] = "Editar Coleção";
}

<h1 style="color: green">Editar Coleção</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganicUnitFK" class="control-label"></label>
                <select asp-for="OrganicUnitFK" class="form-control" asp-items="ViewBag.OrganicUnitFK"></select>
                <span asp-validation-for="OrganicUnitFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
