        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbstractPT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbstractEN)
