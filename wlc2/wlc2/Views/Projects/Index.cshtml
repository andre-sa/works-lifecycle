                @Html.DisplayFor(modelItem => item.Language.Alpha2Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessType.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.License.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
