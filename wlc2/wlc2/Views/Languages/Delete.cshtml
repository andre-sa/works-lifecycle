@model wlc2.Models.Language

@{
    ViewData["Title"] = "Eliminar Idioma";
}

<h1 style="color: green">Eliminar Idioma</h1>

<h3>Tem a certeza que deseja eliminar este idioma?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alpha2Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alpha2Code)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Idioma" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
